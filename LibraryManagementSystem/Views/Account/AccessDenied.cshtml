@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="fas fa-exclamation-triangle me-2"></i>Access Denied</h3>
                </div>
                <div class="card-body text-center p-5">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                    <h4>You don't have permission to access this page</h4>
                    <p class="text-muted">Please contact the administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Go to Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
