@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Add New Book";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-book-medical me-2"></i>Add New Book to Library
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Title" class="form-control form-control-lg" id="titleInput" placeholder="Book Title" />
                                    <label asp-for="Title"><i class="fas fa-heading me-2"></i>Book Title</label>
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Author" class="form-control" id="authorInput" placeholder="Author Name" />
                                    <label asp-for="Author"><i class="fas fa-user-tie me-2"></i>Author Name</label>
                                    <span asp-validation-for="Author" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ISBN" class="form-control" id="isbnInput" placeholder="ISBN" />
                                    <label asp-for="ISBN"><i class="fas fa-barcode me-2"></i>ISBN Number</label>
                                    <span asp-validation-for="ISBN" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Quantity" class="form-control" id="quantityInput" type="number" min="0" placeholder="Quantity" />
                                    <label asp-for="Quantity"><i class="fas fa-boxes me-2"></i>Quantity</label>
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                    <div class="form-text">Number of copies available in the library</div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Add Book
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
