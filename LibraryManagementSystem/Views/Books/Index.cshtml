@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Books Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-book me-2"></i>Books Library
                        </h2>
                        <a asp-action="Create" class="btn btn-light">
                            <i class="fas fa-plus-circle me-2"></i>Add New Book
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">
                                        <i class="fas fa-book-open me-2"></i>@Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        <i class="fas fa-user-edit me-2"></i>@Html.DisplayNameFor(model => model.Author)
                                    </th>
                                    <th>
                                        <i class="fas fa-barcode me-2"></i>@Html.DisplayNameFor(model => model.ISBN)
                                    </th>
                                    <th>
                                        <i class="fas fa-boxes me-2"></i>@Html.DisplayNameFor(model => model.Quantity)
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs me-2"></i>Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Author)</td>
                                    <td>
                                        <span class="text-muted">@Html.DisplayFor(modelItem => item.ISBN)</span>
                                    </td>
                                    <td>
                                        @if (item.Quantity > 5)
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle me-1"></i>@item.Quantity Available
                                            </span>
                                        }
                                        else if (item.Quantity > 0)
                                        {
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="fas fa-exclamation-triangle me-1"></i>@item.Quantity Left
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-times-circle me-1"></i>Out of Stock
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="fas fa-info-circle me-2"></i>Total Books: <strong>@Model.Count()</strong>
                        </div>
                        <div class="col-md-6 text-end">
                            <i class="fas fa-check-circle me-2 text-success"></i>Available: <strong>@Model.Where(b => b.Quantity > 0).Count()</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
