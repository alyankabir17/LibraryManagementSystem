@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>

@{
    ViewData["Title"] = "Issue Records";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-exchange-alt me-2"></i>Book Issue Records
                        </h2>
                        <a asp-action="Issue" class="btn btn-light">
                            <i class="fas fa-book me-2"></i>Issue New Book
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4"><i class="fas fa-book me-2"></i>Book Title</th>
                                    <th><i class="fas fa-user me-2"></i>Member Name</th>
                                    <th><i class="fas fa-calendar-alt me-2"></i>Issue Date</th>
                                    <th><i class="fas fa-calendar-check me-2"></i>Due Date</th>
                                    <th><i class="fas fa-calendar-times me-2"></i>Return Date</th>
                                    <th><i class="fas fa-money-bill-wave me-2"></i>Fine</th>
                                    <th><i class="fas fa-info-circle me-2"></i>Status</th>
                                    <th class="text-center"><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr class="@(item.ReturnDate == null && DateTime.Now > item.DueDate ? "table-warning" : "")">
                                    <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.Book.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Member.Name)</td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-calendar me-1"></i>
                                            @item.IssueDate.ToString("dd MMM yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-calendar-check me-1"></i>
                                            @item.DueDate.ToString("dd MMM yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (item.ReturnDate.HasValue)
                                        {
                                            <small class="text-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                @item.ReturnDate.Value.ToString("dd MMM yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Not Returned
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.FineAmount > 0)
                                        {
                                            <span class="badge bg-danger fine-badge">
                                                Rs. @item.FineAmount.ToString("F2")
                                            </span>
                                            @if (item.IsFinePaid)
                                            {
                                                <br><small class="text-success"><i class="fas fa-check"></i> Paid</small>
                                            }
                                            else
                                            {
                                                <br><small class="text-danger"><i class="fas fa-times"></i> Pending</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ReturnDate.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Returned
                                            </span>
                                        }
                                        else if (DateTime.Now > item.DueDate)
                                        {
                                            var daysOverdue = (DateTime.Now - item.DueDate).Days;
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Overdue (@daysOverdue days)
                                            </span>
                                        }
                                        else
                                        {
                                            var daysLeft = (item.DueDate - DateTime.Now).Days;
                                            <span class="badge bg-primary">
                                                <i class="fas fa-clock me-1"></i>Active (@daysLeft days left)
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IssueRecordId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!item.ReturnDate.HasValue)
                                            {
                                                <a asp-action="Return" asp-route-id="@item.IssueRecordId" class="btn btn-sm btn-success" title="Return Book">
                                                    <i class="fas fa-undo-alt"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted py-3">
                    <div class="row">
                        <div class="col-md-4">
                            <i class="fas fa-list me-2"></i>Total Records: <strong>@Model.Count()</strong>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-book-open me-2 text-primary"></i>Currently Issued: <strong>@Model.Where(r => r.ReturnDate == null).Count()</strong>
                        </div>
                        <div class="col-md-4 text-end">
                            <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Overdue: <strong>@Model.Where(r => r.ReturnDate == null && DateTime.Now > r.DueDate).Count()</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
