@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>

@{
    ViewData["Title"] = "Member's Issued Books";
    var member = ViewBag.Member as LibraryManagementSystem.Models.Member;
    var issuedBooksCount = ViewBag.IssuedBooksCount as int? ?? 0;
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Member Information Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-user me-2"></i>Member Information
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Member ID:</dt>
                                <dd class="col-sm-8"><strong>@member?.MemberId</strong></dd>
                                
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8"><strong>@member?.Name</strong></dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">University ID:</dt>
                                <dd class="col-sm-7"><strong>@member?.UniversityId</strong></dd>
                                
                                <dt class="col-sm-5">Email:</dt>
                                <dd class="col-sm-7">@member?.Email</dd>
                            </dl>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary fs-6">
                            <i class="fas fa-book me-1"></i>
                            Currently Issued: @issuedBooksCount / 5 books
                        </span>
                    </div>
                </div>
            </div>

            <!-- Issued Books Table -->
            <div class="card shadow-sm border-0 mb-5">
                <div class="card-header bg-info text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-book-open me-2"></i>Currently Issued Books
                        </h3>
                        <a asp-action="SearchMember" class="btn btn-light">
                            <i class="fas fa-search me-2"></i>Search Another Member
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info m-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>No books currently issued to this member.</strong>
                            <br>
                            This member has returned all books or hasn't issued any books yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Book Title</th>
                                        <th>Author</th>
                                        <th>Issue Date</th>
                                        <th>Due Date</th>
                                        <th>Days</th>
                                        <th>Fine</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    var daysLeft = (item.DueDate - DateTime.Now).Days;
                                    var isOverdue = DateTime.Now > item.DueDate;
                                    
                                    <tr class="@(isOverdue ? "table-danger" : "")">
                                        <td class="ps-4 fw-bold">@item.Book?.Title</td>
                                        <td>@item.Book?.Author</td>
                                        <td>
                                            <small>
                                                <i class="far fa-calendar me-1"></i>
                                                @item.IssueDate.ToString("dd MMM yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <small>
                                                <i class="far fa-calendar-check me-1"></i>
                                                @item.DueDate.ToString("dd MMM yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="text-danger fw-bold">
                                                    @Math.Abs(daysLeft) days overdue
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-success">
                                                    @daysLeft days left
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.FineAmount > 0)
                                            {
                                                <span class="badge bg-danger fine-badge">
                                                    Rs. @item.FineAmount.ToString("F2")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Overdue
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>On Time
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Return" asp-route-id="@item.IssueRecordId" 
                                               class="btn btn-sm btn-success">
                                                <i class="fas fa-undo-alt me-1"></i>Return Book
                                            </a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                @if (Model.Any())
                {
                    <div class="card-footer bg-light py-3">
                        <div class="row">
                            <div class="col-md-6">
                                <i class="fas fa-book-open me-2 text-primary"></i>
                                Total Books Issued: <strong>@issuedBooksCount</strong>
                            </div>
                            <div class="col-md-6 text-end">
                                <i class="fas fa-money-bill-wave me-2 text-danger"></i>
                                Total Fine: <strong>Rs. @Model.Sum(i => i.FineAmount).ToString("F2")</strong>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
