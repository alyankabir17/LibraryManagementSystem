@model LibraryManagementSystem.Models.IssueRecord

@{
    ViewData["Title"] = "Return Book";
    var calculatedFine = ViewBag.CalculatedFine as decimal? ?? 0;
    var isOverdue = ViewBag.IsOverdue as bool? ?? false;
    var daysOverdue = ViewBag.DaysOverdue as int? ?? 0;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-undo-alt me-2"></i>Return Book
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (isOverdue && calculatedFine > 0)
                    {
                        <div class="overdue-danger">
                            <h5 class="text-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Overdue Book - Fine Required
                            </h5>
                            <p class="mb-2">
                                This book is <strong>@daysOverdue days</strong> overdue.
                            </p>
                            <p class="mb-0">
                                <strong>Fine Amount: Rs. @calculatedFine.ToString("F2")</strong>
                                <small class="text-muted">(Rs. 5 per day)</small>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            This book is being returned on time. No fine applicable.
                        </div>
                    }

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Issue Details</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">
                                    <i class="fas fa-book me-2 text-primary"></i>Book Title
                                </dt>
                                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Book.Title)</dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-user me-2 text-success"></i>Member Name
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Member.Name)</dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-alt me-2 text-info"></i>Issue Date
                                </dt>
                                <dd class="col-sm-8">@Model.IssueDate.ToString("dd MMMM yyyy")</dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-check me-2 text-warning"></i>Due Date
                                </dt>
                                <dd class="col-sm-8">@Model.DueDate.ToString("dd MMMM yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Return" method="post">
                        <input type="hidden" asp-for="IssueRecordId" />
                        
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input type="date" id="returnDate" name="returnDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                    <label for="returnDate">
                                        <i class="fas fa-calendar-times me-2"></i>Return Date
                                    </label>
                                </div>
                            </div>

                            @if (calculatedFine > 0)
                            {
                                <div class="col-md-12">
                                    <div class="card border-danger">
                                        <div class="card-body">
                                            <h5 class="card-title text-danger">
                                                <i class="fas fa-money-bill-wave me-2"></i>
                                                Fine Payment
                                            </h5>
                                            <p class="card-text">
                                                Total Fine Amount: <strong class="fs-4">Rs. @calculatedFine.ToString("F2")</strong>
                                            </p>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="finePaid" name="finePaid" value="true">
                                                <label class="form-check-label" for="finePaid">
                                                    <strong>I confirm that the fine has been paid</strong>
                                                </label>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Please collect the fine payment before confirming the return
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Confirm Return
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
